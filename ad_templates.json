# TEMPLATE 1: ANUNCIOS DE BÚSQUEDA ESTÁNDAR
{
  "template_name": "Search Ads - Standard",
  "template_type": "search_text_ad",
  "description": "Template estándar para anuncios de búsqueda con ofertas",
  "elements": {
    "headlines": [
      {
        "text": "Oferta Especial - {keyword} - {promotion_text}",
        "pinned": "HEADLINE_1"
      },
      {
        "text": "Descuento en {keyword} - Solo Hoy",
        "pinned": "HEADLINE_2"
      },
      {
        "text": "{keyword} al Mejor Precio - Envío Gratis",
        "pinned": "HEADLINE_3"
      }
    ],
    "descriptions": [
      {
        "text": "Encuentra las mejores ofertas en {keyword}. Calidad garantizada.",
        "order": 1
      },
      {
        "text": "Ahorra tiempo y dinero con nuestros {keyword}. Envío 24h.",
        "order": 2
      }
    ],
    "display_paths": [
      {
        "text": "ofertas"
      },
      {
        "text": "es"
      }
    ],
    "final_urls": [
      "https://example.com/landing-{keyword}"
    ]
  },
  "variables": {
    "keyword": "dynamic_keyword",
    "promotion_text": "25% OFF",
    "price_range": "€20-€50"
  }
}

